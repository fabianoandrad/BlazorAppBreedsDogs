@inherits LayoutComponentBase

<MudThemeProvider @ref="@_mudThemeProvider" @bind-IsDarkMode="@_isDarkMode" Theme="_theme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudIconButton OnClick="DrawerToggle" Icon="@Icons.Material.Rounded.Notes" Color="Color.Inherit" Edge="Edge.Start" />
        <MudSpacer />
        <MudIconButton Icon="@DarkLightModeButtonIcon" OnClick="DarkModeToggle" Color="Color.Inherit" Edge="Edge.End" />
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader Style="display:flex; justify-content:center">
            @* <MudText Typo="Typo.h6">Raças de Cães</MudText> *@
            @* <MudImage Src=@($"Assets/Images/{(_isDarkMode ? "dog-house-white.png" : "dog-house-lighten2.png")}") Style="width: 100px" /> *@
            <MudImage Src="Assets/Images/dog-house-lighten2.png" Style="width: 100px" />
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>

    <MudMainContent>
        <MudContainer Class="pt-1">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
